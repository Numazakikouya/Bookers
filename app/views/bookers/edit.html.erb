<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li>errors<%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book,url:"/books/#{@book.id}") do |f| %>
<h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <h5>
    <%= f.submit 'Update Book' %>
	</h5>
<%=link_to "Show",book_path(@book.id) %>
|
<%=link_to "Back",back_path %>
<% end %>
